<%- include ("../partials/header")%>
<div class="all-content">
  <section id="new">
    <div class="container">
      <div class="form-container">
        <h4 class="lone-center-align">Edit Record</h4>
        <form
          action="/user/dashboard/<%=updateData._id%>?_method=PUT"
          method="POST"
        >
          <div class="form-group">
            <label for="weight">Weight</label>
            <input
              type="Number"
              step="0.01"
              class="form-control"
              value="<%=updateData.weight%>"
              id="weight"
              name="weight"
              placeholder="Enter weight"
            />
          </div>
          <div class="form-group">
            <label for="bmi">Body Mass Index</label>
            <input
              type="Number"
              step="0.01"
              class="form-control"
              value="<%=updateData.bmi%>"
              id="bmi"
              name="bmi"
              placeholder="Enter BMI"
              required
            />
          </div>
          <div class="form-group">
            <label for="date">Date</label>
            <input
              type="Date"
              name="date"
              class="form-control"
              value="<%=updateData.userDate%>"
              id="date"
              aria-describedby="emailHelp"
              placeholder="Enter date"
              required
            />
          </div>
          <div class="form-group">
            <label for="time">Time</label>
            <input
              type="Time"
              value="<%=updateData.time%>"
              class="form-control"
              id="time"
              name="time"
              placeholder="Enter time"
              required
            />
          </div>

          <button type="submit" class="lone-center-align btn btn-primary">
            Submit
          </button>
        </form>
      </div>
    </div>
  </section>
</div>
<%- include ("../partials/footer")%>
